@model IEnumerable<MarCom.ViewModel.ProductViewModel>
           @{
               Layout = "";
           }

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Create_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Create_By)
            </th>

            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Create_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Create_By)
                </td>

                <td>
                    <button type="button" class="btn btn-default btn-search" data-id="@item.Id" title="Search">
                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                    </button>
                    <button type="button" class="btn btn-warning btn-edit" data-id="@item.Id" title="Edit">
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                    </button>
                    <button type="button" class="btn btn-danger btn-delete" data-id="@item.Id" title="Delete">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>

</table>


<script type="text/javascript">
    $(".table").DataTable();
    $(".btn-edit").click(function () {
        $(".modal-title").html("Edit Product");
        $.ajax({
            url: '@Url.Action("Edit", "Product")',
            type: 'get',
            data: { id: $(this).attr('data-id') },
            success: function (result) {
                $(".modal-body").html(result);
                $(".modal").modal("show");
            }

        });
    });

</script>

<script type="text/javascript">
    $(".btn-delete").click(function () {
        $(".modal-title").html("Delete Product");
        $.ajax({
            url: '@Url.Action("Delete", "Product")',
            type: 'get',
            data: { id: $(this).attr('data-id') },
            success: function (result) {
                $(".modal-body").html(result);
                $(".modal").modal("show");
            }

        });
    });
</script>


